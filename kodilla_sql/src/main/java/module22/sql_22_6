EXPLAIN SELECT COUNT(*)
FROM BOOKS
WHERE TITLE = 'The Trial';

CREATE INDEX TITLEON ON BOOKS (TITLECON);

EXPLAIN SELECT COUNT(*)
FROM READERS
WHERE FIRSTNAME = 'John';

CREATE INDEX FIRSTNAMEON ON READERS (FIRSTNAMECON);

EXPLAIN SELECT COUNT(*)
FROM READERS
WHERE LASTNAME = 'Wilson';

CREATE INDEX LASTNAMEON ON READERS (LASTNAMECON);
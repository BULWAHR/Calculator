DROP FUNCTION IF EXISTS getReaderId;

DELIMITER $$

CREATE FUNCTION getReaderId(readerId INT) RETURNS VARCHAR (255) DETERMINISTIC
BEGIN
	DECLARE result VARCHAR(20) DEFAULT 'Standard Customer';
    IF readerId <= 0 THEN
		SET result = 'Wrong ID';
	ELSE
		SELECT LASTNAME INTO result FROM readers WHERE READER_ID = readerId;
	END IF;
	RETURN result;
END $$

DELIMITER ;

SELECT getReaderId(3) AS LEVEL;